<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h2>Category change</h2>
        </div>
        <div class="card-body">
            <form method="post" action="/categories/update" >
                <input type="hidden" name="id" value="<%= category.id %>">
                <input class="form-control mb-3" type="text" name="title" value="<%= category.title %>">
                <button class="btn btn-lg bg-dark text-light">Update</button>
            </form>
        </div>
    </div>
</div>
